<MainScreen>:

    name: 'main'
    FloatLayout:
        size_hint: None, None

        DPEAButton:
            text: "Stepper Off"
            id: stepperstate
            size: 300,100
            center_x: root.width * .5
            center_y: root.height * .5
            color: 1, 1, 1, 1
            on_press: self.text = root.stepperbutton(self.text)
            font_size: 40

        Slider:
            id: motorspeed
            size: 400,30
            center: root.width *0.5, root.height * 0.75
            min: 0
            max: 1600
            sensitivity: 'handle'

        Label:
            id: motor_label
            font_size: 40
            text: str(round(motorspeed.value))
            color: 0.5, .4, .8 , 1
            center_x: root.width * 0.5
            center_y: root.height * 0.9
            bold: True
            outline_width: self.font_size * 0.1
            outline_color: 0,0,0
